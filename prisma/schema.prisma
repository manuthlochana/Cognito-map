generator client {
  provider = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions", "driverAdapters"]
  binaryTargets   = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  extensions = [vector]
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  nodes     Node[]
  edges     Edge[]
  memories  MemoryChunk[]
}

model MemoryChunk {
  id        String   @id @default(uuid())
  content   String
  embedding Unsupported("vector(1536)")?
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  
  // Link to nodes derived from this memory
  nodes     Node[]
}

model Node {
  id            String   @id @default(uuid())
  label         String
  type          String   // "Concept", "Entity", "Person", etc.
  embedding     Unsupported("vector(1536)")?
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  memoryChunkId String?
  memoryChunk   MemoryChunk? @relation(fields: [memoryChunkId], references: [id])
  
  sourceEdges   Edge[] @relation("SourceNode")
  targetEdges   Edge[] @relation("TargetNode")
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Edge {
  id          String   @id @default(uuid())
  relationship String
  sourceId    String
  targetId    String
  sourceNode  Node     @relation("SourceNode", fields: [sourceId], references: [id])
  targetNode  Node     @relation("TargetNode", fields: [targetId], references: [id])
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  
  createdAt   DateTime @default(now())
}
